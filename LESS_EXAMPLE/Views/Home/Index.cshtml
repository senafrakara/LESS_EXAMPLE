@{
    ViewData["Title"] = "Home Page";
}

<div class=" container-fluid">

    <div class="row">
        <div class="col-lg-5">
            <div class="col-lg-2">

            </div>
            <div class="col-lg-3">
                @*<div class="main-text">
                       <span class="main-span">Creative Ideas</span>
                    </div>*@

                <div class="float-xl-right full-left">
                    <div class="align-items-xl-start first-div">

                        <label class="label-cre">CREATIVE IDEAS</label>
                    </div>
                    <div class="align-items-xl-start second-div">
                        <p class="craft-design">
                            Craft Design Solutions
                        </p>

                    </div>

                    <div class="align-items-xl-start third-div">
                        <p class="create-tech">We create new technologies for your business thanks</p>
                        <br />
                        <p class="create-tech">to our wonderful team of professionals.</p>

                    </div>

                    <div class="align-items-xl-start last-div">
                        <div class="circle-div">
                            <center>
                                <i class="fas fa-play red-play"></i>
                            </center>

                        </div>
                        <div class="promotion-video">
                            <div class="about-us">
                                <p class="about">ABOUT US</p>
                            </div>

                            <div class="red-text">
                                <p class="promotion">Promotion video</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-lg-7">
            <div id="carouselExampleIndicators" class="carousel slide carousel-pos" data-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/img/index_background.png" alt="First slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/index_background.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/index_background.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev next-prev float-right" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next next-prev float-right" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>